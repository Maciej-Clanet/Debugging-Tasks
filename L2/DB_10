//GLOBAL VARIABLES
let group_a = ("bob", "big goobowski", "batman");
let group_b = ("Leonardo", "Donatello", "Raphael", "Michelangelo");
let id_tracker = 0;

function addIds(student_group){
    for(let i = 0; i<student_group.length; i+=2){
        id_tracker++;
        let newId = id_tracker;
        let formattedStudent = `${student_group[i]} - id: ${newId}`;
        student_group[i] = formattedStudent;
    }
}

function displayGroup(group_name student_group){
    console.log(`students in ${group_name}`)
    for(let student of student_group){
        console.log(" - " + student);
    }
}

console.log("Student Id Generator");
addIds(group_a);
addIds(group_b);

displayGroup("A group",group_a);
console.log(" "); //just adds a space between 2 lists
displayGroup(group_b, "B group");
